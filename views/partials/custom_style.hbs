@font-face {
	font-family: 'font-awesome';
	src: url('webfonts/fa-regular-400.eot');
}
@font-face {
	font-family: 'PT Sans';
	src: url('webfonts/PTSans-Regular.ttf');
}
@font-face {
	font-family: 'PT Sans Narrow';
	src: url('webfonts/PTSansNarrow-Regular.ttf');
}
@font-face {
	font-family: 'Work Sans';
	src: url('webfonts/WorkSans-Regular.ttf');
}
:root {
	--blue: rgb(0, 159, 219);
	--orange: rgb(234, 116, 0);
	--grey: rgb(149, 149, 149);
	--light-grey: rgb(210, 210, 210);
	--gray: rgb(149, 149, 149);
	--light-gray: rgb(210, 210, 210);
	--dark-blue: rgb(5, 104, 174);
	--light-green: rgb(181, 189, 0);
	--white: rgb(255, 255, 255);
	--offwhite: rgb(242, 242, 242);
	--brown: rgba(138, 113, 106, 1);
	--notebook: rgba(255, 248, 244, 1);
	--steel: rgba(145, 177, 196, 1);
	--dark-teal: rgba(22, 59, 70, 1);
}
h1, h2, h3, h4, h5 {
	font-family: "PT Sans", Arial, "sans-serif";
}
strong {
	weight: 600;
}
.logo {
	width: 80px;
	margin: 0 auto;
	display: block;
}
.pqai-logo {
	font-family: 'Work Sans', Arial, sans-serif;
	color: white;
	text-align: center;
}
body {
	color: #444;
	overflow-y: scroll;
	font-family: Lato, Helvetica, Arial, sans-serif;
	font-size: 10pt;
}
p {
	line-height: 1.41;
	margin-bottom: 0.4rem;
}
.container {
	background-color: rgba(255, 255, 255, 0.8);
}
.navbar {
	background-color: var(--blue);
}
a.navbar-brand img {
	height: 36px;
}
.uppercase {
	/* text-transform: uppercase; */
}
.before, .after {
	/* color: #AAA; */
}
.res {
	padding-top: 0.5rem;
}
body {
	background-color: #f4f7fc;
}
.container {
	background-color: transparent;
}
.res-title {
	font-weight: 400;
	color: var(--dark-blue);
	font-size: 14pt;
	cursor: pointer;
	margin-bottom: 0;
}
.res-bib {
	font-family: 'PT Sans Narrow', Arial, sans-serif;
	font-size: 15px;
	text-transform: uppercase;
	color: var(--dark-grey);
}
.res-bib a {
	text-decoration: underline;
	color: var(--dark-grey);
	text-decoration-style: dotted;
}
.hidden {
	display: none;
}
#input-pane, #input-pane .container {
	background-color: var(--dark-teal);
}
#options-pane button {
	border-color: var(--dark-teal);
	background-color: var(--dark-teal);
	color: var(--offwhite);
}
#trigger-search-btn, #trigger-search-btn:hover, #user-text-input, #options-pane button:hover {
	border-color: var(--offwhite);
	background-color: var(--dark-teal);
	color: var(--offwhite);
}
#trigger-search-btn {
	border-radius: 5px;
}
#trigger-search-btn:hover {
	background-color: var(--offwhite);
	color: var(--dark-teal);
}
#user-text-input {
	border-radius: 5px;
}
#trigger-search-btn:focus, #user-text-input:focus {
	box-shadow: none;
}
.card {
	box-shadow: 0 2px 4px rgba(126, 142, 177, .42);
	border: none;
}
.card-title {
	font-size: 14pt;
}
a#apply-date-filter-btn {
	font-family: sans-serif;
	font-size: 10pt;
	text-decoration: underline;
	text-decoration-style: dotted;
	color: inherit;
}
#date-filter-label {
	font-family: sans-serif;
	font-size: 10pt;
	font-weight: bold;
	text-transform: uppercase;
	letter-spacing: 1px;
}
button:focus, input:focus {
	box-shadow: none!important;
}
#calendar-btn:focus {
	background-color: white;
	color: var(--dark-teal) !important;
}
#cutoff-date-input {
	border: none;
	border-bottom: 1px solid var(--grey);
	text-align: center;
	border-radius: 0;
}
.dropdown-menu {
	box-shadow: 0 2px 4px rgba(126, 142, 177, .42);
}